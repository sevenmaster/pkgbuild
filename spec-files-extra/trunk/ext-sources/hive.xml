<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='hive'>
  <service name='developer/distributed/hive' type='service' version='0'>
    <single_instance/>
    <dependency name='fs' grouping='require_all' restart_on='none' type='service'>
      <service_fmri value='svc:/system/filesystem/local'/>
    </dependency>
    <dependency name='network' grouping='require_all' restart_on='none' type='service'>
      <service_fmri value='svc:/milestone/multi-user-server'/>
    </dependency>
    <instance name='default' enabled='false'>
      <exec_method type='method'
                   name='start'
                   exec='/usr/share/hive/bin/hive --service hiveserver'
                   timeout_seconds='60'>
	<method_context>
          <method_credential user='hive' group='other' />
	</method_context>
      </exec_method>
      <exec_method type='method'
                   name='stop'
                   exec=':kill'
                   timeout_seconds='60'>
	<method_context>
          <method_credential user='hive' group='other'/>
	</method_context>
      </exec_method>
      <template>
	<common_name>
          <loctext xml:lang='C'>Hive - A data warehouse system for Hadoop</loctext>
	</common_name>
      </template>
    </instance>
  </service>
</service_bundle>
